{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: install (frontend)",
      "type": "shell",
      "command": "pnpm install",
      "options": {
        "cwd": "${workspaceFolder:frontend}"
      },
      "problemMatcher": []
    },
    {
      "label": "npm: install (backend)",
      "type": "shell",
      "command": "pnpm install",
      "options": {
        "cwd": "${workspaceFolder:backend}"
      },
      "problemMatcher": []
    },
    {
      "label": "npm: start (frontend)",
      "type": "shell",
      "command": "pnpm run dev",
      "options": {
        "cwd": "${workspaceFolder:frontend}"
      },
      "isBackground": false,
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "npm: start (backend)",
      "type": "shell",
      "command": "pnpm run dev",
      "options": {
        "cwd": "${workspaceFolder:backend}"
      },
      "isBackground": false,
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run: Install All",
      "dependsOn": [
        "npm: install (frontend)",
        "npm: install (backend)"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "Run: Start Both (terminals)",
      "dependsOn": [
        "npm: start (frontend)",
        "npm: start (backend)"
      ],
      "dependsOrder": "parallel"
    }
  ]
}